<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F4EF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/test_head" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/head_select_bg" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:scaleType="fitCenter"
                android:src="@drawable/head_select_bg_trans" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0" >

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:text="ANNIE"
                android:textColor="#12171B"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/ageTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@+id/nameTv"
                android:gravity="bottom"
                android:text="22"
                android:textColor="#A1919C"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/sexTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/ageTv"
                android:gravity="bottom"
                android:text="♀"
                android:textColor="#A1919C"
                android:textSize="24sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_weight="0"
            android:text="大家好， 我是上海人，我喜欢跳舞，喜欢唱歌，希望成为一名歌手，请大家多多支持"
            android:textColor="#8D8c88" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:gravity="center" >

            
            <RelativeLayout 
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:background="@drawable/thumb_btn">
            <TextView
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#fff"
                android:gravity="center"
                android:text="投我一票"
                android:textColor="#808080"
                android:textSize="20sp" />
            
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="@drawable/main_select_line"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#F2F1ED" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" >
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="23dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/main_select_01" />
                
                <TextView 
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="资料"
                    android:textColor="#000"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/main_select_02" />
                
                <TextView 
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="视频"
                    android:textColor="#000"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" 
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/main_select_03" />
                
                <TextView 
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="换一个"
                    android:textColor="#000"
                    />
                
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" >
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="0"
        android:background="@drawable/main_select_line"
        android:text="" />

</LinearLayout>